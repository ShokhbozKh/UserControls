<UserControl
    x:Class="WpfApp1.View.UserControls.UserCon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1.View.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="70"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem FontSize="18" Header="File">
                <MenuItem Header="1" />
                <MenuItem Header="1" />
                <MenuItem Header="1" />
                <MenuItem Header="1" />
            </MenuItem>

            <MenuItem FontSize="18" Header="Edit" />
            <MenuItem FontSize="18" Header="Exit" />
        </Menu>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />

            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                Width="50"
                Margin="5" />
            <TextBox
                Grid.Column="1"
                Width="150"
                Margin="5" />
        </Grid>
    </Grid>
</UserControl>
